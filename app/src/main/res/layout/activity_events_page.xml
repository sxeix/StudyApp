<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventpagecoord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".eventsPage">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme"
            app:titleTextColor="#000000"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="564dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/customEventsText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/events_custom"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/customEventsListView"
                    android:layout_width="fill_parent"
                    android:layout_height="800px"
                    android:layout_below="@+id/customEventsText" />

                <TextView
                    android:id="@+id/dailyEventsText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customEventsListView"
                    android:text="@string/daily_custom"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/dailyEventsListView"
                    android:layout_width="fill_parent"
                    android:layout_height="800px"
                    android:layout_below="@+id/dailyEventsText" />

                <TextView
                    android:id="@+id/weeklyEventsText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dailyEventsListView"
                    android:text="@string/weekly_custom"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/weeklyEventsListView"
                    android:layout_width="fill_parent"
                    android:layout_height="800px"
                    android:layout_below="@+id/weeklyEventsText" />

                <TextView
                    android:id="@+id/monthlyEventsText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weeklyEventsListView"
                    android:text="@string/monthly_custom"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/monthlyEventsListView"
                    android:layout_width="fill_parent"
                    android:layout_height="800dp"
                    android:layout_below="@+id/monthlyEventsText" />

                <TextView
                    android:id="@+id/yearlyEventsText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/monthlyEventsListView"
                    android:text="@string/yearly_custom"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ListView
                    android:id="@+id/yearlyEventsListView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/yearlyEventsText"
                    android:layout_weight="0" />
            </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>