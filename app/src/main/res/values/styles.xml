<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#F5E2E1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F5E2E1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">#F5E2E1</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
        <item name="popupBackground">@drawable/custom_popup1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <style name="BlueMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#B9EEF5</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#B9EEF5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">#B9EEF5</item>
        <item name="popupBackground">@drawable/custom_popup</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <style name="RedMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#F68989</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F68989</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">#F68989</item>
        <item name="popupBackground">@drawable/red_gradient</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <style name="YellowMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#F6DB89</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F6DB89</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">#F6DB89</item>
        <item name="popupBackground">@drawable/red_gradient</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <style name="GreenMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#9DF689</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#9DF689</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">#9DF689</item>
        <item name="popupBackground">@drawable/green_gradient</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <style name="OrangeMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#F6B182</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#F6B182</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">#F6B182</item>
        <item name="popupBackground">@drawable/orange_gradient</item>
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <!--How the the transitions look like between pages-->
    <style name="WindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#BBBBBB</item>
        <item name="colorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

    <style name="AppTheme.popWindow">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
